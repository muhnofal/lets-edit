<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <!-- Header -->
    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Background -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorSecond"
            android:layout_width="match_parent"
            android:layout_height="256dp">
            <!-- Yang ngatur isiannya -->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="350dp"
                    android:src="@drawable/commentprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout

                android:layout_marginLeft="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Welcome,"
                    android:textColor="#C997FF"
                    android:textSize="29dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/NamaUser"
                    android:text="Unknown"
                    android:textColor="#fff"
                    android:textSize="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="-30dp"
                    android:src="@drawable/orangngedit" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

<!-- Content -->

    <LinearLayout

        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="-50dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/hire"
            app:cardBackgroundColor="@color/colorSecond"
            app:cardCornerRadius="17dp"
            android:layout_margin="20dp"
            android:layout_width="125dp"
            android:layout_height="125dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:layout_margin="10dp"

                    android:src="@drawable/hireicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:text="HIRE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/inbox"
            app:cardBackgroundColor="@color/colorSecond"
            app:cardCornerRadius="17dp"
            android:layout_margin="20dp"
            android:layout_width="125dp"
            android:layout_height="125dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:layout_margin="10dp"

                    android:src="@drawable/inboxicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:text="INBOX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <!-- content kedua -->

    <LinearLayout

        android:layout_gravity="center"
        android:padding="50dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/progress"
            app:cardBackgroundColor="@color/colorSecond"
            app:cardCornerRadius="17dp"
            android:layout_margin="20dp"
            android:layout_width="125dp"
            android:layout_height="125dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:layout_margin="10dp"

                    android:src="@drawable/progressicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="13dp"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:text="PROGRESS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>




        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>