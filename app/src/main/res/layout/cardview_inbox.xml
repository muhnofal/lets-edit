<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CardViewInbox"
    android:layout_width="315dp"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorSecond"
    app:cardCornerRadius="9dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="45dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Content -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Pengirim Pesan -->
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="12dp"
                android:id="@+id/SenderImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/inboxicon"/>

            <!-- Nama -->
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/SenderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aisyah"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/SenderDue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13 PM (5jam yang lalu)"
                    android:textColor="#fff"
                    android:textSize="8dp"/>

            </LinearLayout>
            <!-- Akhir Nama -->

        </LinearLayout>
        <!-- Akhir Pengrim Pesan -->

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<!--            <TextView-->
<!--                android:id="@+id/SenderMessage"-->
<!--                android:layout_width="280dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Hi, Malih projectmu telah selesai, silahkan di cek"-->
<!--                android:textColor="#fff"-->
<!--                android:textSize="12dp"/>-->

        </LinearLayout>


    </LinearLayout>
    <!-- Akhir Content -->


</androidx.cardview.widget.CardView>